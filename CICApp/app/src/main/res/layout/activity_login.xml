<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
android:orientation="vertical">


    <ImageView android:layout_width="150dp" android:layout_height="150dp"
    android:background="@drawable/logo"
    android:layout_gravity="center"
    android:layout_margin="20dp"

    />


<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/fa_phone_square_solid"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"
            app:solid_icon="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
    />

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Phone Number"
              android:padding="16sp"
              android:layout_margin="10dp"
              android:inputType="number"

    />




</LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">


        <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/fa_key_solid"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                app:solid_icon="true"
                android:layout_margin="10dp"
                android:layout_gravity="center"
        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:hint="Password"
                  android:padding="16sp"
                  android:layout_margin="10dp"
                  android:inputType="textPassword"


        />




    </LinearLayout>



    <Button android:layout_width="match_parent"
            android:id="@+id/loginBtn"
            android:text="Login"
            android:background="@drawable/background_btn"
            android:layout_height="wrap_content"
    android:layout_margin="@android:dimen/app_icon_size"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text="Forget your password?"
              android:layout_gravity="center"
              android:textStyle="bold"
              android:textSize="16dp"
              android:id="@+id/forgetPasswordBtn"
    />


    <LinearLayout android:layout_width="wrap_content"
                  android:id="@+id/registerLinerBtn"
                  android:layout_height="wrap_content"

                  android:orientation="horizontal"
    android:layout_gravity="center"
    >

        <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/fa_user_plus_solid"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                app:solid_icon="true"
                android:layout_gravity="center"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:text="Join Us Today?"
                  android:layout_gravity="center"
                  android:layout_margin="20sp"
android:textStyle="bold"
                  android:textSize="16dp"
        />



    </LinearLayout>



</LinearLayout>